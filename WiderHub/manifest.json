{
  "manifest_version": 2,

  "name": "WiderHub",
  "description": "Changes the css in github PR's to display them full width.",
  "version": "1.0",

  "permissions": [
    "tabs", "https://github.com/*"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js" : ["script.js"]
    }
  ],
  "web_accessible_resources": ["inject.js"]
}